# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/rentchain

# JWT
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM=noreply@rentchain.com
EMAIL_FROM_NAME=RentChain

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword

# Blockchain
WEB3_PROVIDER_URL=https://eth-sepolia.g.alchemy.com/v2/sw-BMbGHGOkXWmcIQRs-jGvzi4IVNMN1
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=your-private-key-here

# ML Models
MODEL_PATH=models
ENABLE_RECOMMENDATIONS=true

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=RentChain API
PROJECT_VERSION=1.0.0
DESCRIPTION=Backend API for RentChain rental platform

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000", "http://localhost:8080", "https://localhost:8080"]

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
DEBUG=true